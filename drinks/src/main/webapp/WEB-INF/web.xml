<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
 <servlet>
  	<servlet-name>cocacola</servlet-name>
  	<servlet-class>com.wolk.drinks.CocaColaServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>fanta</servlet-name>
  	<servlet-class>com.wolk.drinks.FantaServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>fizz</servlet-name>
  	<servlet-class>com.wolk.drinks.FizzServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>frooti</servlet-name>
  	<servlet-class>com.wolk.drinks.FrootiServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>maaza</servlet-name>
  	<servlet-class>com.wolk.drinks.MaazaServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>paperboat</servlet-name>
  	<servlet-class>com.wolk.drinks.PaperBoatServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>pepsi</servlet-name>
  	<servlet-class>com.wolk.drinks.PepsiServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>slice</servlet-name>
  	<servlet-class>com.wolk.drinks.SliceServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>sprite</servlet-name>
  	<servlet-class>com.wolk.drinks.SpriteServlet</servlet-class>
  </servlet>
  
    <servlet-mapping>
  	<servlet-name>cocacola</servlet-name>
  	<url-pattern>/cocacola</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>fanta</servlet-name>
  	<url-pattern>/fanta</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>fizz</servlet-name>
  	<url-pattern>/fizz</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>frooti</servlet-name>
  	<url-pattern>/frooti</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>maaza</servlet-name>
  	<url-pattern>/maaza</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>paperboat</servlet-name>
  	<url-pattern>/paperboat</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>pepsi</servlet-name>
  	<url-pattern>/pepsi</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>slice</servlet-name>
  	<url-pattern>/slice</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>sprite</servlet-name>
  	<url-pattern>/sprite</url-pattern>
  </servlet-mapping>
  
   <welcome-file-list>
  	<welcome-file>fizz.html</welcome-file>
  </welcome-file-list>
</web-app>
